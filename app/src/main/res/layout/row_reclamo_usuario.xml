<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DefaultCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/big_row_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="85"
            android:orientation="vertical"
            android:weightSum="100">

            <TextView
                android:id="@+id/txtDescReclamo"
                style="@style/PrimaryText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/marginLeftRightRow"
                android:layout_marginStart="@dimen/marginLeftRightRow"
                android:layout_weight="50"
                android:gravity="center|start"
                android:text="InstalaciÃ³n de banco" />

            <TextView
                android:id="@+id/txtNombreParque"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/marginLeftRightRow"
                android:layout_marginStart="@dimen/marginLeftRightRow"
                android:layout_weight="50"
                android:gravity="center"
                android:src="@drawable/ic_acceder"
                android:text="Parque Rivadavia" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15">

            <View
                android:id="@+id/circleState"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/circle" />

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>