<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.reclamos.AgregarReclamoActivity">

    <include
        android:id="@+id/toolbar_agregar_reclamo"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txt_reclamo_nombre_parque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/nombre_parque"
            android:textAlignment="center"
            android:textSize="@dimen/reclamo_nombre_parque" />

        <Button
            android:id="@+id/btn_elegir_reclamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:enabled="false"
            android:text="@string/elegir_reclamo"
            android:textSize="@dimen/title_row" />

        <EditText
            android:id="@+id/et_reclamos_comentarios"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top|left"
            android:hint="Ingresar comentario.."
            android:inputType="textMultiLine"
            android:maxLines="10"
            android:paddingTop="5dp"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btn_generar_reclamo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/generar" />

    </LinearLayout>


</LinearLayout>
