<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_reclamo_txt_nombre_parque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parque Rivadavia"
                android:textSize="@dimen/title_row" />

            <TextView
                android:id="@+id/row_reclamo_txt_nombre_reclamo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:text="InstalaciÃ³n de banco"
                android:textSize="@dimen/subtitle_row" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=">"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>