<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    app:elevation="8dp"
    card_view:cardBackgroundColor="@color/gray_100"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:elevation="4dp"
            android:padding="@dimen/general_padding">

            <TextView
                android:id="@+id/txtTitulo"
                style="@style/PrimaryText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MANUALIDADES Y ARTESANIAS" />

            <TextView
                android:id="@+id/txtDescripcion"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitulo"
                android:layout_marginTop="20dp"
                android:text="SABADO, DOMINGOS Y FERIADOS" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgMapaFeria"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="mapa"
                android:visibility="gone" />

        </FrameLayout>

        <TextView
            android:id="@+id/txtComoLlego"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="@dimen/general_padding"
            android:text="CÃ³mo llego?"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>